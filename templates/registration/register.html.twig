{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ parent() }}
    {% if registrationForm is defined %}
        <div class="container-fluid h-100 bg-light text-dark">
            <div class="row justify-content-center align-items-center">
                <h1>Registration form</h1>
            </div>
            <hr/>
            {% form_theme registrationForm with ['bootstrap_4_horizontal_layout.html.twig', 'partial/custom.html.twig', _self] %}

            {{ form_start(registrationForm) }}
            <div class="form-group">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email) }}

                            <small id="emailHelp" class="form-text text-muted">
                                We'll never share your email with anyone else.
                            </small>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            {{ form_label(registrationForm.firstName) }}
                            {{ form_widget(registrationForm.firstName) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            {{ form_label(registrationForm.lastName) }}
                            {{ form_widget(registrationForm.lastName) }}
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            {{ form_label(registrationForm.plainPassword.first) }}
                            {{ form_widget(registrationForm.plainPassword.first) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            {{ form_label(registrationForm.plainPassword.second) }}
                            {{ form_widget(registrationForm.plainPassword.second) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            {{ form_widget(registrationForm.save, { 'label': 'Register' }) }}
                        </div>
                    </div>
                </div>
            </div>

            {{ form_end(registrationForm) }}

        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}

{% endblock %}
